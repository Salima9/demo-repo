MDScreen:
    name: 'create_account'
    id: create_account
    BoxLayout:
        
        size_hint: None, None
        size: 300, 450
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 60
        spacing: 35
        orientation: 'vertical'

        MDTextFieldRound:
            hint_text: "UserName"
            id: created_user
            required: True
            icon_right: "account-check"
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 150
            font_size: 15
            pos_hint: {"center_x": 0.5}
            multiline: False

        MDTextFieldRound:
            hint_text:'Firstname'
            id: created_fisrt_n
            required: True
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 150
            font_size: 15
            pos_hint: {"center_x": 0.5}
            multiline: False

        MDTextFieldRound:
            hint_text:'Lastname'
            id: created_last_n
            required: True
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 150
            font_size: 15
            pos_hint: {"center_x": 0.5}
            multiline: False

        MDTextFieldRound:
            hint_text:'Email'
            id: Email
            icon_right: "account"
            required: True
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 150
            font_size: 15
            pos_hint: {"center_x": 0.5}
            multiline: False

        MDTextFieldRound:
            hint_text:'Password'
            id: created_password
            required: True
            icon_right: "key-variant"
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 150
            font_size: 15
            pos_hint: {"center_x": 0.5}
            password: True
            multiline: False

        MDFillRoundFlatButton:
            text: "Submit"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: 
                app.account_labels()
                app.root.current = 'first_page'
                root.manager.transition.direction = 'right'



       



